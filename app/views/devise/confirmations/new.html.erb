<div class="row">
<p>&nbsp;</p>
  <div class = "small-9 small-centered columns panel">
<h2>Resend confirmation instructions</h2>
<div class="row">
 <%= render 'layouts/messages' %>
</div>

<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
 <% if !resource.errors.messages.empty? %>
    <div data-alert class="alert-box alert"><%= devise_error_messages! %></div>
  <% end %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true %></div>

  <div><%= f.submit "Resend confirmation instructions", class: "button" %></div>
<% end %>

<%= render "devise/shared/links" %>
</div></div>