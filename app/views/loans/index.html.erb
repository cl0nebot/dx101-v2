<div class ="header">  
  <div class="row">
    <h1>Loans</h1>
  </div>
</div>
<div class="row">
  <h1>WORK IN PROGRESS. ADMIN ONLY</h1>

  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Amount</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @loans.each do |loan| %>
        <tr>
          <td><%= loan.user %></td>
          <td><%= loan.amount %></td>
          <td><%= link_to 'Show', loan %></td>
          <td><%= link_to 'Edit', edit_loan_path(loan) %></td>
          <td><%= link_to 'Destroy', loan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Loan', new_loan_path %>
</div>